{
  "manifest_version": 3,
  "name": "OZ‑MCP Opportunity Zone Checker",
  "version": "1.0.0",
  "description": "Checks if addresses on real estate sites are in an Opportunity Zone using the OZ‑MCP backend.",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://oz-mcp.vercel.app/*"
  ],
  "action": {
    "default_title": "OZ‑MCP: Scan this page",
    "default_icon": {
      "16": "icons/oz-mcp-pin-icon.png",
      "32": "icons/oz-mcp-pin-icon.png",
      "48": "icons/oz-mcp-pin-icon.png",
      "128": "icons/oz-mcp-pin-icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "all_frames": true,
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/oz-mcp-pin-icon.png",
    "32": "icons/oz-mcp-pin-icon.png",
    "48": "icons/oz-mcp-pin-icon.png",
    "128": "icons/oz-mcp-pin-icon.png"
  }
}